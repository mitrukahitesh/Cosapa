<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.onboarding.SelectOccupation">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"

      android:layout_height="match_parent">

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true"

          app:layout_constraintTop_toTopOf="parent">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="32sp"
              >

              <TextView
                  android:id="@+id/textView7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="32dp"
                  android:layout_marginTop="32dp"
                  android:text="@string/occupationgreet"
                  android:fontFamily="@font/poppins_semibold"
                  android:textSize="20sp"
                  android:padding="10sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

              <TextView
                  android:id="@+id/textView8"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/poppins_regular"
                  android:padding="10sp"
                  android:text="Letsâ€™s start to getting know\nyour profession"
                  android:textSize="16sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.175"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView7" />

              <androidx.cardview.widget.CardView
                  android:id="@+id/general"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView8">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_carbon_user_multiple"
                      android:layout_margin="50sp"/>

              </androidx.cardview.widget.CardView>

              <TextView
                  android:id="@+id/gentv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="48dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:padding="10sp"
                  android:text="General"
                  android:textColor="@color/black"
                  android:textSize="16sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/general" />
              <androidx.cardview.widget.CardView
                  android:id="@+id/healthworker"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toEndOf="@+id/general"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView8">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_healthicons_health_worker"
                      android:layout_margin="50sp"/>


              </androidx.cardview.widget.CardView>

              <TextView
                  android:id="@+id/healthproftv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="48dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:padding="10sp"
                  android:text="Health worker"
                  android:textColor="@color/black"
                  android:textSize="16sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.744"
                  app:layout_constraintStart_toStartOf="@id/gentv"
                  app:layout_constraintTop_toBottomOf="@+id/healthworker" />

              <androidx.cardview.widget.CardView
                  android:id="@+id/doctors"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/gentv">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_maki_doctor"
                      android:layout_margin="50sp"/>

              </androidx.cardview.widget.CardView>
              <TextView
                  android:id="@+id/doctv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="48dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:padding="10sp"
                  android:text="Doctors"
                  android:textColor="@color/black"
                  android:textSize="16sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/doctors" />
              <androidx.cardview.widget.CardView
                  android:id="@+id/volunteer"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toEndOf="@+id/doctors"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/healthproftv">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_grommet_icons_user_worker"
                      android:layout_margin="50sp"/>

              </androidx.cardview.widget.CardView>

              <TextView
                  android:id="@+id/voltv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="48dp"
                  android:fontFamily="@font/poppinsmedium"
                  android:padding="10sp"
                  android:text="Volunteer"
                  android:textColor="@color/black"
                  android:textSize="16sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.695"
                  app:layout_constraintStart_toStartOf="@id/doctv"
                  app:layout_constraintTop_toBottomOf="@+id/volunteer" />

              <androidx.cardview.widget.CardView
                  android:id="@+id/ngo"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toStartOf="parent"

                  app:layout_constraintTop_toBottomOf="@+id/doctv">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_ri_government_line"
                      android:layout_margin="50sp"/>

              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:id="@+id/fitnessexperts"
                  android:layout_width="150sp"
                  android:layout_height="150sp"
                  android:layout_marginStart="16dp"
                  android:layout_marginTop="24dp"
                  app:cardCornerRadius="16sp"
                  app:cardElevation="8sp"
                  app:layout_constraintStart_toEndOf="@+id/ngo"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/voltv">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/purplecircle"
                      android:padding="24sp"/>
                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_clarity_employee_group_line"
                      android:layout_margin="50sp"/>

              </androidx.cardview.widget.CardView>
          </androidx.constraintlayout.widget.ConstraintLayout>
      </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>